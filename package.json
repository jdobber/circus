{
    "name": "agent-service",
    "version": "0.0.1-alpha.1",
    "description": "A simple agent service built with fastify, graphql and arangodb.",
    "main": "index.js",
    "author": "Jens Dobberthin",
    "license": "MIT",
    "scripts": {
        "server:dev:watch": "cd server && yarn run server:dev:watch",
        "lint": "eslint .",
        "prettier:check": "prettier --config ./.prettierrc --check '{packages,server,services}/**/{lib,__{tests,mocks}__}/**/*.(js|gql)'",
        "prettier:write": "prettier --config ./.prettierrc --write '{packages,server,services}/**/{lib,__{tests,mocks}__}/**/*.(js|gql)'"
    },
    "devDependencies": {
        "husky": "^4.2.5",
        "lerna": "^3.21.0",
        "prettier": "^2.0.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "workspaces": [
        "packages/*",
        "services/*",
        "server"
    ],
    "private": true
}
