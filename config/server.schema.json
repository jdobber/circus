{
    "env": {
        "doc": "The application environment.",
        "format": ["production", "development", "test"],
        "default": "development",
        "env": "NODE_ENV"
    },
    "server": {
        "host": {
            "doc": "The IP address to bind",
            "format": "ipaddress",
            "default": "127.0.0.1",
            "env": "SERVICE_HOST"
        },
        "port": {
            "doc": "The port to bind.",
            "format": "port",
            "default": 3000,
            "env": "SERVICE_PORT"
        }
    },
    "arangodb": {
        "url": {
            "doc": "The remote url of ArangoDB.",
            "format": "String",
            "default": "http://localhost:8529"
        },
        "database": {
            "doc": "The database to use.",
            "format": "String",
            "default": "_system"
        }
    }
}
